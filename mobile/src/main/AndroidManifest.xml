<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.richieapps.materialgirl" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.richieapps.materialgirl.MaterialActivity"
            android:label="@string/animations" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
                <category android:name="com.wta.android.intent.category.MATERIAL" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.richieapps.materialgirl.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.richieapps.materialgirl.MaterialActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.richieapps.materialgirl.MaterialActivity" />
        </activity>
        <activity
            android:name="com.richieapps.materialgirl.RecyclerViewActivity"
            android:label="@string/title_activity_recycler_view"
            android:parentActivityName="com.richieapps.materialgirl.MaterialActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.richieapps.materialgirl.MaterialActivity" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
                <category android:name="com.wta.android.intent.category.MATERIAL" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.richieapps.materialgirl.UiTintActivity"
            android:label="@string/title_activity_ui_tint"
            android:parentActivityName="com.richieapps.materialgirl.MaterialActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.richieapps.materialgirl.MaterialActivity" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
                <category android:name="com.wta.android.intent.category.MATERIAL" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.richieapps.materialgirl.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
